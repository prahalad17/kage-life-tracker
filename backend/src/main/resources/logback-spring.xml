<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Application name from Spring context -->
    <springProperty scope="context" name="Kage"
                    source="spring.application.name"/>

    <!-- Log pattern -->
    <property name="LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n"/>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Local Profile -->
    <springProfile name="local">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>

        <logger name="com.kage" level="DEBUG"/>
    </springProfile>

    <!-- Development Profile -->
    <springProfile name="dev">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>

        <logger name="com.kage" level="DEBUG"/>
    </springProfile>

    <!-- Production Profile -->
    <springProfile name="prod">
        <root level="WARN">
            <appender-ref ref="CONSOLE"/>
        </root>

        <logger name="com.kage" level="INFO"/>
    </springProfile>

</configuration>
